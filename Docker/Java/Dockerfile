# BASE IMAGE
FROM openjdk:17-jdk-alpine

# WORKING DIRECTORY
WORKDIR /app

# CODE CODE FROM HOST TO CONTAINER WORKING DIRECTORY
COPY /src/Main.java .
COPY quotes.txt .

# RUN THE COMMAND TO INSTALL LIBRARY / COMPILE CODE
RUN javac Main.java

# EXPOSE THE PORT
EXPOSE 8000

# SERVE THE APPLICATION
CMD ["java", "Main"]
